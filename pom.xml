	<build>
		<finalName>${project.name}</finalName>
		<plugins>
			<plugin>
				<groupId>org.springframework.boot</groupId>
				<artifactId>spring-boot-maven-plugin</artifactId>
			</plugin>

			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>${java.version}</source> <!-- depending on your project -->
					<target>${java.version}</target> <!-- depending on your project -->
					<annotationProcessorPaths>
						<path>
							<groupId>org.mapstruct</groupId>
							<artifactId>mapstruct-processor</artifactId>
							<version>${org.mapstruct.version}</version>
						</path>
						<path>
							<groupId>org.projectlombok</groupId>
							<artifactId>lombok</artifactId>
							<version>${org.projectlombok.version}</version>
						</path>
						<path>
                             <groupId>org.projectlombok</groupId>
                             <artifactId>lombok-mapstruct-binding</artifactId>
                             <version>${lombok.mapstruct.binding.version}</version>
                        </path>
						<!-- other annotation processors -->
					</annotationProcessorPaths>
					<compilerArgs>
                        <arg>-Amapstruct.suppressGeneratorTimestamp=true</arg>
                        <arg>-Amapstruct.defaultComponentModel=spring</arg>
                    </compilerArgs>
				</configuration>
			</plugin>
			
			<plugin>
	            <groupId>org.openclover</groupId>
	            <artifactId>clover-maven-plugin</artifactId>
	            <version>${org.openclover.clover.maven.plugin.version}</version>
	            <configuration>
	                <!-- Use custom report descriptor -->
	                <reportDescriptor>clover-report.xml</reportDescriptor>
	            </configuration>
	        </plugin>
	        
			<plugin>
			    <artifactId>maven-surefire-plugin</artifactId>
			    <configuration>
                    <!-- Se salta test unitarios si el valor de skip.unit.tests property es true -->
                    <skipTests>${skip.unit.tests}</skipTests>
                    <!-- Excluye los test de integracion cuando se ejecutan test unitarios. ï¿½-->
                    <excludes>
                        <exclude>**/IT*.java</exclude>
                    </excludes>
                    <reportsDirectory>${surefire.and.failsafe.report.dir}</reportsDirectory>
                </configuration>
			</plugin>
			
			<plugin>
			    <artifactId>maven-failsafe-plugin</artifactId>
			    <configuration>
                   <!-- Se salta los test de integracion si el valor de skip.integration.tests es true -->
                   <skipTests>${skip.integration.tests}</skipTests>
                   <reportsDirectory>${surefire.and.failsafe.report.dir}</reportsDirectory>
                </configuration>
			    <executions>
			        <execution>
			            <goals>
			                <goal>integration-test</goal>
			                <goal>verify</goal>
			            </goals>			            
			        </execution>			          
			    </executions>			    
			</plugin>
			
			<!-- Code Coverage -->
			<plugin>
				<groupId>org.jacoco</groupId>
				<artifactId>jacoco-maven-plugin</artifactId>
				<version>${org.jacoco.maven.plugin.version}</version>
				<configuration>
					<skip>${skip.jacoco}</skip>
					<excludes>
						<!-- exclude class -->
						<exclude>com.vobi.demo.vault/SpringBootRunner.class</exclude>
						
						<!-- exclude classes in package -->
						<exclude>com.vobi.demo.vault.entity.service.*</exclude>
						<exclude>com.vobi.demo.vault.entity.controller.*</exclude>
						<exclude>com.vobi.demo.vault.dto.*</exclude>
						<exclude>com.vobi.demo.vault.domain.*</exclude>
						<exclude>com.vobi.demo.vault.mapper.*</exclude>
						<exclude>com.vobi.demo.vault.utility.*</exclude>
						<exclude>com.vobi.demo.vault.exception.*</exclude>
						
					</excludes>
				</configuration>
				<executions>
					<execution>
						<id>prepare-agent</id>
						<goals>
							<goal>prepare-agent</goal>
						</goals>
					</execution>
					<execution>
						<id>report</id>
						<phase>test</phase>
						<goals>
							<goal>report</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<!-- Code Coverage -->
			
			<plugin>
	            <groupId>org.pitest</groupId>
	            <artifactId>pitest-maven</artifactId>
	            <version>${org.pitest.maven.version}</version>
	
	            <!--attach execution to maven's test phase-->
	            <executions>
	                <execution>
	                    <id>pit-report</id>
	                    <phase>test</phase>
	                    <goals>
	                        <goal>mutationCoverage</goal>
	                    </goals>
	                </execution>
	            </executions>
	
	            <!--allows to work with JUnit 5-->
	            <dependencies>
	                <dependency>
	                    <groupId>org.pitest</groupId>
	                    <artifactId>pitest-junit5-plugin</artifactId>
	                    <version>${org.pitest.junit5.plugin.version}</version>
	                </dependency>
	            </dependencies>
	
	            <!--optional-->
	            <configuration>
	                <targetClasses>
	                    <param>com.vobi.demo.vault.entity.service*</param>
	                </targetClasses>
	                <targetTests>
	                    <param>com.vobi.demo.vault.entity.service*</param>
	                </targetTests>
	            </configuration>	
	        </plugin>
			

		</plugins>
	</build>

